<% title "Users" %>

<table>
  <tr>
    <th>Name</th>
    <th>Role</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% for user in @users %>
    <tr>
      <td><%= user.username %></td>
      <td><% for role in user.roles %><%= role.name %><% end %></td>
      <td><%= link_to "Edit", edit_user_path(user) %></td>
      <td><%= link_to "Delete", user, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
