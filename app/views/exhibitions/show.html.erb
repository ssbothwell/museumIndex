<% title "Exhibition" %>

<p>
  <strong>Title:</strong>
  <%=h @exhibition.title %>
</p>
<p>
  <strong>Date Open:</strong>
  <%=h @exhibition.date_open %>
  <% if @exhibition.date_open = "nil" %>
    Ongoing
  <% end %>
  <strong>Date Close:</strong>
  <%=h @exhibition.date_close %>
</p>
<p>
  <strong>Link:</strong>
  <%= link_to @exhibition.title, @exhibition.url %>
</p>
<p>
  <strong>Museum:</strong>
  <%= link_to @exhibition.museum.name, @exhibition.museum %>
</p>

<p>
  <%= link_to "Edit", edit_exhibition_path(@exhibition) %> |
  <%= link_to "Destroy", @exhibition, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", exhibitions_path %>
</p>
